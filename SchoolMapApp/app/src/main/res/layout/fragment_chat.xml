<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <include
        android:id="@+id/i_header"
        layout="@layout/sub_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_friend"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_login"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:background="@drawable/logging_in"
            android:contentDescription="@string/logging_in" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_large"
            android:text="@string/logging_in"
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>

    <TextView
        android:id="@id/tv_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/i_header"
        android:background="@color/colorIgnore"
        android:paddingStart="@dimen/padding_default"
        android:text="@string/friend" />

    <ListView
        android:id="@+id/lv_friend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_friend" />

    <ListView
        android:id="@+id/lv_menu"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/i_header"
        android:visibility="gone" />
</RelativeLayout>